{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Capacity",
  "description": "Suivi de la capacité de traitement quotidienne",
  "type": "object",
  "properties": {
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date (YYYY-MM-DD)"
    },
    "max_leads": {
      "type": "integer",
      "description": "Capacité maximale de leads"
    },
    "current_leads": {
      "type": "integer",
      "description": "Nombre de leads traités aujourd'hui"
    },
    "remaining_capacity": {
      "type": "integer",
      "description": "Capacité restante"
    },
    "status": {
      "type": "string",
      "enum": ["normal", "warning", "full"],
      "description": "Statut de la capacité"
    },
    "threshold_warning": {
      "type": "number",
      "description": "Seuil d'alerte (% de capacité)"
    },
    "ads_paused": {
      "type": "boolean",
      "description": "Publicités mises en pause"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["date", "max_leads", "current_leads"]
}

